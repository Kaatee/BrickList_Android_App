<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/available"
        android:layout_alignBottom="@+id/available"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="TextView" />

    <TextView
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/separator"
        android:layout_alignBottom="@+id/separator"
        android:layout_toStartOf="@+id/separator"
        android:text="0" />

    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/needed"
        android:layout_alignBottom="@+id/needed"
        android:layout_toStartOf="@+id/needed"
        android:text="/" />

    <TextView
        android:id="@+id/needed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/plusButton"
        android:layout_alignBottom="@+id/plusButton"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/plusButton"
        android:text="3" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/minusButton"
        android:text="+" />

    <Button
        android:id="@+id/minusButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="-" />
</RelativeLayout>